<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    	  	
  	<!-- main.do -->
	<definition name="main.do" template="/WEB-INF/views/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/tumblbug/main.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"/>  	
  	</definition>

  	<!-- view.do -->
	<definition name="view.do" template="/WEB-INF/views/inc/layoutView.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/tumblbug/view.jsp"/>
  	</definition>
   
   <definition name="*.*"  template="/WEB-INF/views/{1}/inc/layout.jsp">
       <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute> 
       <put-attribute name="visual" value="/WEB-INF/views/{1}/inc/visual.jsp"></put-attribute> 
       <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute> 
       <put-attribute name="aside" value="/WEB-INF/views/{1}/inc/aside.jsp"></put-attribute> 
       <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
       
       <put-attribute name="css" value="{2}.css"/>
   </definition>   
   
</tiles-definitions>